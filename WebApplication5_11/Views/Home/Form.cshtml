
@{
    ViewBag.Title = "Form";
}

<h2>Form</h2>

<form action="/Home/Form" method="post">
    <div class="form-group">
        <input class="form-control" name="Name" placeholder="სახელი" type="text" />
    </div>
    <div class="form-group">
        <input class="form-control" name="Surname" placeholder="გვარი" type="text" />
    </div>
    <div class="form-group">
        <input class="form-control" name="Age" placeholder="ასაკი" type="number" />
    </div>
    <div class="form-group">
        <input class="form-control" name="Job" placeholder="სამსახური" type="text" />
    </div>
    <div class="form-group">
        <input class="form-control" name="Email" placeholder="ელ.ფოსტა" type="email" />
    </div>
    <div class="form-group">
        <input class="form-control" name="Phone" placeholder="ტელეფონი" type="text" />
    </div>
    <div class="form-group">
        <input class="form-control" name="Languages" placeholder="პროგრამირების ენები" type="text" />
    </div>
    <div class="form-group">
        <button type="submit" class="btn btn-success">შექმნა</button>
    </div>
    <div class="form-group">
        @ViewBag.message
    </div>
</form>
<a href="/Home/List">მაჩვენე სია</a>
